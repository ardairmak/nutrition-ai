{
  "expo": {
    "name": "Food Recognition",
    "slug": "food-recognition",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.foodrecognition.app",
      "config": {
        "usesNonExemptEncryption": false
      },
      "associatedDomains": ["applinks:foodrecognition.app"],
      "infoPlist": {
        "UIBackgroundModes": ["background-processing", "remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.foodrecognition.app",
      "intentFilters": [
        {
          "autoVerify": true,
          "action": "VIEW",
          "data": [
            {
              "scheme": "foodrecognition",
              "host": "auth"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "permissions": [
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED",
        "SCHEDULE_EXACT_ALARM",
        "USE_EXACT_ALARM",
        "com.android.alarm.permission.SET_ALARM",
        "POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "foodrecognition",
    "packagerOpts": {
      "sourceExts": ["js", "jsx", "ts", "tsx", "json"],
      "config": "metro.config.js"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      },
      "enableNetworkDebug": true
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#4285F4",
          "defaultChannel": "default",
          "sounds": []
        }
      ]
    ],
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#4285F4",
      "androidMode": "default",
      "androidCollapsedTitle": "Food Recognition"
    }
  }
}
